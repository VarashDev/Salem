---
const { bestFor } = Astro.props;
import { Image } from "astro:assets";

import salmonImage from "../assets/best-salmon-fishing-spots-salem-oregon.png";
import steelheadImage from "../assets/best-steelhead-fishing-spots-salem-oregon.png";
import troutImage from "../assets/best-trout-fishing-spots-salem-oregon.png";
import bassImage from "../assets/best-bass-fishing-spots-salem-oregon.png";
---
{ bestFor != "salmon" && (
    <div class="flex bg-white p-2 my-4 shadow text-blue-700 font-semibold rounded-md">
        <Image src={salmonImage} alt="Best salmon fishing spots near Salem" width={100} loading="lazy" class="rounded-md shadow-md" />
        <a href="/salmon/best-spots/" class="pl-4">Best salmon fishing spots near Salem, Oregon</a>
    </div>
)}
{ bestFor != "steelhead" && (
    <div class="flex bg-white p-2 my-4 shadow text-blue-700 font-semibold rounded-md">
        <Image src={steelheadImage} alt="Best steelhead fishing spots near Salem" width={100} loading="lazy" class="rounded-md shadow-md" />
        <a href="/steelhead/best-spots/" class="pl-4">Best steelhead fishing spots near Salem, Oregon</a>
    </div>
)}
{ bestFor != "trout" && (
    <div class="flex bg-white p-2 my-4 shadow text-blue-700 font-semibold rounded-md">
        <Image src={troutImage} alt="Best trout fishing spots near Salem" width={100} loading="lazy" class="rounded-md shadow-md" />
        <a href="/trout/best-spots/" class="pl-4">Best trout fishing spots near Salem, Oregon</a>
    </div>
)}
{ bestFor != "bass" && (
    <div class="flex bg-white p-2 my-4 shadow text-blue-700 font-semibold rounded-md">
        <Image src={bassImage} alt="Best bass fishing spots near Salem" width={100} loading="lazy" class="rounded-md shadow-md" />
        <a href="/bass/best-spots/" class="pl-4">Best bass fishing spots near Salem, Oregon</a>
    </div>
)}